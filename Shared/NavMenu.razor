@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="img/Logo.png" alt="Logo" style="height: 40px;" />
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

        <div class="@NavMenuCssClass nav-scrollable" @onclick="CollapseNavMenu">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                        <span class="bi bi-house-nav-link" aria-hidden="true"></span> Inicio
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="consultar-documento">
                        <span class="bi bi-search-nav-link" aria-hidden="true"></span> Consultar Documento
                    </NavLink>
                </div>
                @if (estaAutenticado)
                {
                    @if (esSuperAdmin)
                    {
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="calificacion">
                                <span class="bi bi-pencil-square-nav-link" aria-hidden="true"></span> Calificación
                            </NavLink>
                        </div>
                    }
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="listado-calificaciones">
                            <span class="bi bi-list-check-nav-link" aria-hidden="true"></span> Listado Calificaciones
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="listado-redimidos">
                            <span class="bi bi-list-check-nav-link" aria-hidden="true"></span> Listado Redimidos
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="puntos-acumulados">
                            <span class="bi bi-list-nested-nav-link" aria-hidden="true"></span> Puntos Acumulados
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="redencion-puntos">
                            <span class="bi bi-gift-fill-nav-link" aria-hidden="true"></span> Redención Puntos
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="tabla-premios">
                            <span class="bi bi-table-nav-link" aria-hidden="true"></span> Tabla Premios
                        </NavLink>
                    </div>
                    @if (esSuperAdmin)
                    {
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="administracion">
                                <span class="bi bi-gear-fill-nav-link" aria-hidden="true"></span> Administración
                            </NavLink>
                        </div>
                    }
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="actualizar-contrasena">
                            <span class="bi bi-key-nav-link" aria-hidden="true"></span> Cambiar Contraseña
                        </NavLink>
                    </div>
                    @if (esSuperAdmin)
                    {
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="registro">
                                <span class="bi bi-person-plus-nav-link" aria-hidden="true"></span> Registrar Usuario
                            </NavLink>
                        </div>
                    }
                    <div class="nav-item px-3">
                        <a class="nav-link" href="#" @onclick="CerrarSesion">
                            <span class="bi bi-box-arrow-right-nav-link" aria-hidden="true"></span> Cerrar Sesión (@nombreUsuario)
                        </a>
                    </div>
                }
                else
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="login">
                            <span class="bi bi-box-arrow-in-right-nav-link" aria-hidden="true"></span> Iniciar Sesión
                        </NavLink>
                    </div>
                }
            </nav>
        </div>

@code {
    private bool collapseNavMenu = false; // Siempre activo en móvil
    private bool estaAutenticado = false;
    private bool esSuperAdmin = false;
    private string nombreUsuario = string.Empty;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        await VerificarAutenticacion();
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private async void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        await VerificarAutenticacion();
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await VerificarAutenticacion();
        StateHasChanged();
    }

    protected override async Task OnParametersSetAsync()
    {
        await VerificarAutenticacion();
    }

    private async Task VerificarAutenticacion()
    {
        var usuarioId = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "usuarioId");
        var rol = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "rol");
        nombreUsuario = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "nombreUsuario") ?? string.Empty;

        estaAutenticado = !string.IsNullOrEmpty(usuarioId);
        esSuperAdmin = rol == "SuperAdmin";
    }

    private async Task CerrarSesion()
    {
        await JSRuntime.InvokeVoidAsync("sessionStorage.clear");
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CollapseNavMenu()
    {
        collapseNavMenu = true;
    }
}

