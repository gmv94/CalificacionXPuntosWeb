@page "/actualizar-contrasena"
@using CalificacionXPuntosWeb.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Actualizar Contraseña</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h4>Actualizar Contraseña</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="contrasenaActual" class="form-label">Contraseña Actual:</label>
                        <InputText id="contrasenaActual" type="password" class="form-control" @bind-Value="contrasenaActual" />
                    </div>
                    <div class="mb-3">
                        <label for="nuevaContrasena" class="form-label">Nueva Contraseña:</label>
                        <InputText id="nuevaContrasena" type="password" class="form-control" @bind-Value="nuevaContrasena" />
                    </div>
                    <div class="mb-3">
                        <label for="confirmarNuevaContrasena" class="form-label">Confirmar Nueva Contraseña:</label>
                        <InputText id="confirmarNuevaContrasena" type="password" class="form-control" @bind-Value="confirmarNuevaContrasena" />
                    </div>
                    @if (!string.IsNullOrEmpty(mensajeError))
                    {
                        <div class="alert alert-danger">@mensajeError</div>
                    }
                    <div class="d-grid">
                        <button type="button" class="btn btn-warning" @onclick="OnActualizar">Actualizar Contraseña</button>
                        <button type="button" class="btn btn-secondary mt-2" @onclick="Cancelar">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string contrasenaActual = string.Empty;
    private string nuevaContrasena = string.Empty;
    private string confirmarNuevaContrasena = string.Empty;
    private string mensajeError = string.Empty;
    private int? usuarioId = null;

    protected override async Task OnInitializedAsync()
    {
        var usuarioIdStr = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "usuarioId");
        if (string.IsNullOrEmpty(usuarioIdStr))
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        usuarioId = int.Parse(usuarioIdStr);
    }

    private async Task OnActualizar()
    {
        mensajeError = string.Empty;

        if (string.IsNullOrWhiteSpace(contrasenaActual))
        {
            mensajeError = "La contraseña actual es requerida.";
            return;
        }

        if (string.IsNullOrWhiteSpace(nuevaContrasena))
        {
            mensajeError = "La nueva contraseña es requerida.";
            return;
        }

        if (nuevaContrasena != confirmarNuevaContrasena)
        {
            mensajeError = "Las contraseñas no coinciden.";
            return;
        }

        if (nuevaContrasena.Length < 4)
        {
            mensajeError = "La nueva contraseña debe tener al menos 4 caracteres.";
            return;
        }

        if (!usuarioId.HasValue)
        {
            mensajeError = "Error: Usuario no identificado.";
            return;
        }

        var resultado = AuthService.ActualizarContrasena(usuarioId.Value, contrasenaActual, nuevaContrasena);
        if (resultado)
        {
            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "success",
                title = "¡Éxito!",
                text = "Contraseña actualizada exitosamente.",
                confirmButtonText = "Aceptar"
            });
            NavigationManager.NavigateTo("/");
        }
        else
        {
            mensajeError = "La contraseña actual es incorrecta o hubo un error al actualizar.";
        }
    }

    private void Cancelar()
    {
        NavigationManager.NavigateTo("/");
    }
}

