@page "/login"
@using CalificacionXPuntosWeb.Models
@using CalificacionXPuntosWeb.Services
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Iniciar Sesión</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Iniciar Sesión</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="@loginModel" OnValidSubmit="OnLogin">
                        <DataAnnotationsValidator />
                        <div class="mb-3">
                            <label for="nombreUsuario" class="form-label">Usuario:</label>
                            <InputText id="nombreUsuario" class="form-control" @bind-Value="loginModel.NombreUsuario" />
                            <ValidationMessage For="@(() => loginModel.NombreUsuario)" />
                        </div>
                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña:</label>
                            <InputText id="contrasena" type="password" class="form-control" @bind-Value="loginModel.Contrasena" />
                            <ValidationMessage For="@(() => loginModel.Contrasena)" />
                        </div>
                        @if (!string.IsNullOrEmpty(mensajeError))
                        {
                            <div class="alert alert-danger">@mensajeError</div>
                        }
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string mensajeError = string.Empty;

    private async Task OnLogin()
    {
        mensajeError = string.Empty;

        if (string.IsNullOrWhiteSpace(loginModel.NombreUsuario) || string.IsNullOrWhiteSpace(loginModel.Contrasena))
        {
            mensajeError = "Por favor ingrese usuario y contraseña.";
            return;
        }

        var usuario = AuthService.Login(loginModel.NombreUsuario, loginModel.Contrasena);
        if (usuario != null)
        {
            // Guardar en sesión
            await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "usuarioId", usuario.Id.ToString());
            await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "nombreUsuario", usuario.NombreUsuario);
            await JSRuntime.InvokeVoidAsync("sessionStorage.setItem", "rol", usuario.Rol);

            await JSRuntime.InvokeVoidAsync("Swal.fire", new
            {
                icon = "success",
                title = "¡Bienvenido!",
                text = $"Hola {usuario.NombreUsuario}",
                confirmButtonText = "Aceptar",
                timer = 1500
            });

            // Forzar recarga completa para actualizar el menú
            await Task.Delay(500); // Esperar un poco para que se cierre el SweetAlert
            NavigationManager.NavigateTo("/", forceLoad: true);
        }
        else
        {
            mensajeError = "Usuario o contraseña incorrectos.";
        }
    }

    public class LoginModel
    {
        public string NombreUsuario { get; set; } = string.Empty;
        public string Contrasena { get; set; } = string.Empty;
    }
}

