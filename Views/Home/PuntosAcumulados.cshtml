@using CalificacionXPuntosWeb.Services
@{
    ViewData["Title"] = "Puntos Acumulados";
    var puntosAcumulados = ViewBag.PuntosAcumulados as List<CalificacionXPuntosWeb.Models.PuntosAcumulados>;
    var detalle = ViewBag.Detalle as CalificacionXPuntosWeb.Models.PuntosAcumulados;
    var puntosHistoricos = ViewBag.PuntosHistoricos as List<CalificacionXPuntosWeb.Models.PuntosHistoricos>;
    var mostrarDetalle = detalle != null;
}

<h3>Puntos Acumulados</h3>

@if (puntosAcumulados == null || !puntosAcumulados.Any())
{
    <p>No hay puntos acumulados registrados.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Número Documento</th>
                    <th>Nombre Usuario</th>
                    <th>Total Ideas</th>
                    <th>Puntos Históricos</th>
                    <th>Total Puntos</th>
                    <th>Puntos Disponibles</th>
                    <th>Puntos Utilizados</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in puntosAcumulados)
                {
                    <tr>
                        <td>@item.NumeroDocumento</td>
                        <td>@item.NombreUsuario</td>
                        <td>@item.TotalIdeas</td>
                        <td>@item.PuntosHistoricos</td>
                        <td>@item.TotalPuntos</td>
                        <td>@item.PuntosDisponibles</td>
                        <td>@item.PuntosUtilizados</td>
                        <td>
                            <button class="btn btn-sm btn-info" onclick="verDetalle('@item.NumeroDocumento')">
                                Ver Detalle
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (mostrarDetalle)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalle de Ideas - @detalle.NumeroDocumento</h5>
                    <a href="/Home/PuntosAcumulados" class="btn-close" aria-label="Close"></a>
                </div>
                <div class="modal-body">
                    <p><strong>Usuario:</strong> @detalle.NombreUsuario</p>
                    <p><strong>Total Ideas:</strong> @detalle.TotalIdeas</p>
                    <p><strong>Puntos Históricos:</strong> @detalle.PuntosHistoricos</p>
                    <p><strong>Total Puntos:</strong> @detalle.TotalPuntos</p>
                    @if (puntosHistoricos != null && puntosHistoricos.Any())
                    {
                        <h6 class="mt-3">Puntos Históricos:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Puntos</th>
                                        <th>Observaciones</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ph in puntosHistoricos)
                                    {
                                        <tr>
                                            <td>@ph.Puntos</td>
                                            <td>@ph.Observaciones</td>
                                            <td>@TimeHelper.ToColombiaTime(ph.FechaRegistro).ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    @if (detalle.Ideas != null && detalle.Ideas.Any())
                    {
                        <h6 class="mt-3">Ideas:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Radicado</th>
                                        <th>Categoría</th>
                                        <th>Proceso</th>
                                        <th>Estado</th>
                                        <th>Puntos</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var idea in detalle.Ideas)
                                    {
                                        <tr>
                                            <td>@idea.Radicado</td>
                                            <td>@idea.Categoria</td>
                                            <td>@idea.Proceso</td>
                                            <td>@idea.Estado</td>
                                            <td>@idea.Puntos</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <a href="/Home/PuntosAcumulados" class="btn btn-secondary">Cerrar</a>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function verDetalle(numeroDocumento) {
        window.location.href = '/Home/VerDetallePuntos?numeroDocumento=' + encodeURIComponent(numeroDocumento);
    }
</script>
