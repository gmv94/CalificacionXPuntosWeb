@using CalificacionXPuntosWeb.Services
@{
    ViewData["Title"] = "Listado de Calificaciones";
    var ideas = ViewBag.Ideas as List<CalificacionXPuntosWeb.Models.Idea>;
    var categorias = ViewBag.Categorias as List<string>;
    var estados = ViewBag.Estados as List<string>;
    var procesos = ViewBag.Procesos as List<string>;
}

<h3>Listado de Calificaciones</h3>

<!-- Filtros -->
<div class="card mb-3">
    <div class="card-header">
        <h5>Filtros</h5>
    </div>
    <div class="card-body">
        <form method="get" action="/Home/ListadoCalificaciones">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Número Documento:</label>
                    <input type="text" class="form-control" name="filtroDocumento" value="@ViewBag.FiltroDocumento" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Nombre Usuario:</label>
                    <input type="text" class="form-control" name="filtroNombre" value="@ViewBag.FiltroNombre" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Categoría:</label>
                    <select class="form-select" name="filtroCategoria">
                        <option value="">Todas</option>
                        @foreach (var cat in categorias ?? new List<string>())
                        {
                            <option value="@cat" selected="@(ViewBag.FiltroCategoria == cat)">@cat</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Proceso:</label>
                    <input type="text" class="form-control" name="filtroProceso" value="@ViewBag.FiltroProceso" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-3">
                    <label class="form-label">Estado:</label>
                    <select class="form-select" name="filtroEstado">
                        <option value="">Todos</option>
                        @foreach (var est in estados ?? new List<string>())
                        {
                            <option value="@est" selected="@(ViewBag.FiltroEstado == est)">@est</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Radicado:</label>
                    <input type="text" class="form-control" name="filtroRadicado" value="@ViewBag.FiltroRadicado" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Desde:</label>
                    <input type="date" class="form-control" name="filtroFechaDesde" value="@ViewBag.FiltroFechaDesde" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Hasta:</label>
                    <input type="date" class="form-control" name="filtroFechaHasta" value="@ViewBag.FiltroFechaHasta" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="/Home/ListadoCalificaciones" class="btn btn-secondary">Limpiar Filtros</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Tabla de resultados -->
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Documento</th>
                <th>Nombre</th>
                <th>Celular</th>
                <th>Categoría</th>
                <th>Proceso</th>
                <th>Estado</th>
                <th>Radicado</th>
                <th>Fecha Radicado</th>
                <th>Puntos Totales</th>
                <th>Fecha Registro</th>
                <th>Detalle</th>
                @if (ViewBag.EsSuperAdmin == true)
                {
                    <th>Acciones</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (ideas != null && ideas.Any())
            {
                @foreach (var idea in ideas)
                {
                    <tr>
                        <td>@idea.Id</td>
                        <td>@idea.NumeroDocumento</td>
                        <td>@idea.NombreUsuario</td>
                        <td>@idea.Celular</td>
                        <td>@idea.Categoria</td>
                        <td>@idea.Proceso</td>
                        <td>@idea.Estado</td>
                        <td>@idea.Radicado</td>
                            <td>@(idea.FechaRadicado != default(DateTime) ? idea.FechaRadicado.ToString("dd/MM/yyyy") : "")</td>
                        <td>@((int)Math.Round(idea.PuntosTotales))</td>
                        <td>@TimeHelper.ToColombiaTime(idea.FechaRegistro).ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a href="/Home/Calificacion?id=@idea.Id&modo=ver" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                        </td>
                        @if (ViewBag.EsSuperAdmin == true)
                        {
                            <td>
                                <a href="/Home/Calificacion?id=@idea.Id&modo=editar" class="btn btn-sm btn-warning p-1" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="/Home/EliminarCalificacion" style="display:inline;" class="form-eliminar-calificacion" data-id="@idea.Id" data-nombre="@idea.NombreUsuario">
                                    <input type="hidden" name="id" value="@idea.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger p-1 ms-1" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="@(ViewBag.EsSuperAdmin == true ? "13" : "12")" class="text-center">No se encontraron registros con los filtros aplicados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Paginación -->
@if (ViewBag.TotalPaginas > 1)
{
    <nav aria-label="Paginación">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="/Home/ListadoCalificaciones?pagina=@(ViewBag.PaginaActual - 1)&filtroDocumento=@ViewBag.FiltroDocumento&filtroNombre=@ViewBag.FiltroNombre&filtroCategoria=@ViewBag.FiltroCategoria&filtroProceso=@ViewBag.FiltroProceso&filtroEstado=@ViewBag.FiltroEstado&filtroRadicado=@ViewBag.FiltroRadicado&filtroFechaDesde=@ViewBag.FiltroFechaDesde&filtroFechaHasta=@ViewBag.FiltroFechaHasta">Anterior</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" href="/Home/ListadoCalificaciones?pagina=@i&filtroDocumento=@ViewBag.FiltroDocumento&filtroNombre=@ViewBag.FiltroNombre&filtroCategoria=@ViewBag.FiltroCategoria&filtroProceso=@ViewBag.FiltroProceso&filtroEstado=@ViewBag.FiltroEstado&filtroRadicado=@ViewBag.FiltroRadicado&filtroFechaDesde=@ViewBag.FiltroFechaDesde&filtroFechaHasta=@ViewBag.FiltroFechaHasta">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                <a class="page-link" href="/Home/ListadoCalificaciones?pagina=@(ViewBag.PaginaActual + 1)&filtroDocumento=@ViewBag.FiltroDocumento&filtroNombre=@ViewBag.FiltroNombre&filtroCategoria=@ViewBag.FiltroCategoria&filtroProceso=@ViewBag.FiltroProceso&filtroEstado=@ViewBag.FiltroEstado&filtroRadicado=@ViewBag.FiltroRadicado&filtroFechaDesde=@ViewBag.FiltroFechaDesde&filtroFechaHasta=@ViewBag.FiltroFechaHasta">Siguiente</a>
            </li>
        </ul>
    </nav>
}

<div class="mt-3">
    <p>Total de registros: <strong>@ViewBag.TotalRegistros</strong> | Mostrando página <strong>@ViewBag.PaginaActual</strong> de <strong>@ViewBag.TotalPaginas</strong></p>
</div>

<div class="mt-3">
    <a href="/Home/ExportarExcel?filtroDocumento=@ViewBag.FiltroDocumento&filtroNombre=@ViewBag.FiltroNombre&filtroCategoria=@ViewBag.FiltroCategoria&filtroProceso=@ViewBag.FiltroProceso&filtroEstado=@ViewBag.FiltroEstado&filtroRadicado=@ViewBag.FiltroRadicado&filtroFechaDesde=@ViewBag.FiltroFechaDesde&filtroFechaHasta=@ViewBag.FiltroFechaHasta" class="btn btn-success">
        <i class="bi bi-download"></i> Exportar Excel
    </a>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.form-eliminar-calificacion').forEach(form => {
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                const id = this.dataset.id;
                const nombre = this.dataset.nombre || '';
                const result = await Swal.fire({
                    title: '¿Está seguro?',
                    text: `¿Desea eliminar el registro ID ${id} - ${nombre}?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                });
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        });
    </script>
}
