<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Puntos por Ideas</title>
    <base href="~/" />
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/img/Logo.png" />
</head>
<body>
    <div class="page">
        <div class="sidebar">
            @await Html.PartialAsync("_NavMenu")
        </div>

        <main>
            <div class="top-row px-4">
                <h1 class="titulo-principal">PUNTOS POR IDEAS</h1>
            </div>

            <article class="content px-4">
                @RenderBody()
            </article>
        </main>
    </div>


    <script src="~/js/sweetalert2.min.js"></script>
    <script src="~/js/sweetalert-helper.js"></script>
    <script src="~/js/download.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    
    @if (TempData["Mensaje"] != null)
    {
        <script>
            Swal.fire({
                icon: '@(TempData["TipoMensaje"] ?? "success")',
                title: '@TempData["Mensaje"]',
                confirmButtonText: "Aceptar",
                timer: 1500
            });
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>

